{% if form_errors(form) %}
    <div class="alert alert-block alert-error fade in form-errors">
    {{ form_errors(form) }}
    </div>
{% endif %}
<p>
    <label for="">Nombre</label>
    {% if form_errors(form.name) %}
        <div class="alert alert-block alert-error fade in form-errors">
        {{ form_errors(form.name) }}
        </div>
    {% endif %}
    {{ form_widget(form.name, { 'attr': {'class': 'w100'} }) }}
</p>
