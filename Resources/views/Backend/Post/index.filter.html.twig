<div class="span12">
  {% if form_errors(filterForm) %}
    <div class="alert alert-block alert-error fade in form-errors">

    </div>
  {% endif %}
  <form class="well" action="{{ url('_blog_backend_post') }}" method="post" {{ form_enctype(filterForm) }}>
    <div class="row-fluid clearfix ">
      <div class="span3">
        <label>Name: </label>
        {{ form_widget(filterForm.name) }}
      </div>
      <div class="span3">
        <label>Text: </label>
        {{ form_widget(filterForm.text) }}
      </div>
      <div class="span3">
        <label>IsPublished: </label>
        {{ form_widget(filterForm.isPublished) }}
      </div>
      <div class="span3">
        <button type="submit" name="filter_action" value="filter">Filter</button>
        <button type="submit" name="filter_action" value="reset">Reset</button>
      </div>
    </div>
    <div class="row-fluid clearfix ">
      <div class="span3">
        <label>OrderBy: </label>
        {{ form_widget(filterForm.order) }}
      </div>
    </div>
    {{ form_rest(filterForm) }}
  </form>
</div>
